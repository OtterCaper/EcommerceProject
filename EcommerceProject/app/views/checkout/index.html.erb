<h2 class="title is-2">Checkout</h2>

<ol>
    <% @stripe_ready_line_items.each do |item| %>
        <li>
            <p>Item: <%= item[:name] %></p>
            <p>Description: <%= item[:description] %> </p>
            <p>Quantity: <%= item[:quantity].to_s %></p>
            <% if item[:quantity] > 1%>
                <p>Price each: <%= number_to_currency(item[:amount] / 100).to_s %> </p>
                <p>Price total: <%= number_to_currency(item[:amount] * item[:quantity] / 100).to_s %></p>
            <% else%>
                <p>Price: <%= number_to_currency(item[:amount] / 100).to_s %> </p>
            <% end %>
        </li>
    <% end %>
</ol>

<p><b>Total before tax: <%= number_to_currency(@total_before_tax / 100).to_s %></b></p>
<p><b>Total: <%= number_to_currency(@total_after_tax / 100).to_s %></b></p>

<p>Shipping address: <%=@province.name + ', ' + current_user.address + ', ' + current_user.postalcode%></p>
<p><%= link_to "Edit address", edit_user_registration_path %></p>

<%= form_with url: checkout_create_path, remote: true do%>
    <%= button_tag 'Checkout'%>
<% end %>