<%= form_with(url: search_products_path, local: true, method: "get", class: 'mt-5 mb-5') do %>
  <div class="field has-addons">
    <div class="control, search">
      <div class="select is-primary">Select category: <%= select_tag(:search_attribute,  options_for_select([['All', 1], ['Adaption', 2], ['Emission', 3], ['Enhancement', 4], ['Manipulation', 5]]))  %></div>
      <label class="checkbox">On Sale: <%= check_box_tag(:sale_attribute) %></label>
      <label class="checkbox">New: <%= check_box_tag(:new_attribute) %></label>
      <%= text_field_tag(:search_term, nil, class: 'input', placeholder: 'Search Products By Name') %>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: "button is-info") %>
    </div>
    <div class="control">
      <%= render partial: 'common/shopping_cart'%>
    </div>
  </div>


<% end %>